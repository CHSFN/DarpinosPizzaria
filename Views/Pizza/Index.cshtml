@model IEnumerable<PizzaModel>

<div class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Pizza">Cadastrar uma nova pizza!</a>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">

            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var pizza in Model)
                    {
                        <div class="card mx-3 my-3 p-2" style="width: 12rem">
                            @if (pizza.Capa != null)
                            {
                                <img src="/imagem/@pizza.Capa" class="card-img-top" style="width: 175px; height: 150px"/>
                            }
                            else
                            {
                                <img src="..." class="card-img-top"/>
                            }
                        </div>
                    }
                }
            }

        </div>
    </div>
</div>

